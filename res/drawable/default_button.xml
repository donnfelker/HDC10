<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/button_pressed_start_gradient"
                android:endColor="@color/button_pressed_end_gradient"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/button_pressed_border" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/button_default_end_gradient"
                android:endColor="@color/button_default_start_gradient"
                android:angle="270" />
            <stroke
                android:width="2dp"
                 android:color="@color/button_default_border" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape android:shape="rectangle">
            <gradient
                android:endColor="@color/button_default_end_gradient"
                android:startColor="@color/button_default_start_gradient"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/button_default_border" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
